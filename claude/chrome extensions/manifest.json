{
    "manifest_version": 3,
    "name": "Claude Export Conversation Data",
    "version": "1.0",
    "permissions": [
        "cookies",
        "webRequest",
        "activeTab",
        "scripting",
        "downloads"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "host_permissions": [
        "<all_urls>"
    ]
}